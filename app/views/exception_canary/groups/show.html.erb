<% content_for :title, "Group: #{@group.name}" %>

<h4>
  <%= @group.name %>
</h4>

<hr/>

<% if @stored_exception %>

  <span>
    <b>First seen</b> <%= format_time_ago(@group.stored_exceptions.first.created_at) %> ago
  </span>

  <span>
    <b>Last seen</b> <%= format_time_ago(@stored_exception.created_at) %> ago
  </span>

  <span>
    <b>Number</b> <%= @group.stored_exceptions.count %>
  </span>

  <hr/>


  <ul class="nav nav-tabs">
    <li class="active">
      <a href="#backtrace" data-toggle="tab">Backtrace</a>
    </li>
    <li><a href="#exceptions" data-toggle="tab">Exceptions</a></li>
    <li><a href="#" data-toggle="tab">...</a></li>
  </ul>
   
  <div class="tab-content">
    <div class="tab-pane active" id="backtrace">
      <%= render partial: "exception_canary/stored_exceptions/backtrace" %>
    </div>
    <div class="tab-pane active" id="exceptions">
      <%= render partial: 'exception_canary/stored_exceptions/table', locals: { stored_exceptions: @group.stored_exceptions.limit(50) } %>
    </div>
  </div>
  
<% else %>
  <p>No exceptions in this group</p>
<% end %>
