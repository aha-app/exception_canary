<% content_for :title, 'Groups' %>

<table class='table groups'>
  <thead>
    <tr>
      <th><%= sortable 'name' %></th>
      <th><%= sortable 'exceptions_count', 'Exceptions' %></th>
      <th><%= sortable 'most_recent_exception', 'Last' %></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr <%= 'class="warning"' if group.notify? %>>
        <td><%= link_to group.name, group %></td>
        <td><%= group.exceptions_count %></td>
        <td><%= group.most_recent_exception.nil? ? 'None' : format_time(group.most_recent_exception) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @groups %>